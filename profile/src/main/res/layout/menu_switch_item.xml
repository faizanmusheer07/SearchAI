<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_switch_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_15"
        android:paddingBottom="@dimen/dimen_1"
        android:text="@string/dark_theme"
        android:textColor="@color/cpTextDark"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_switch_helper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_10"
        android:text="@string/dark_theme_change"
        android:layout_marginEnd="@dimen/dimen_15"
        android:textColor="@color/cpHelpText"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toStartOf="@+id/item_change_theme_switch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_switch_setting_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_switch_setting_title" />

    <Switch
        android:id="@+id/item_change_theme_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_1"
        android:thumb="@drawable/custom_switch_thumb"
        android:track="@drawable/custom_switch_track"
        app:layout_constraintBottom_toBottomOf="@+id/tv_switch_helper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_switch_setting_title" />


</androidx.constraintlayout.widget.ConstraintLayout>
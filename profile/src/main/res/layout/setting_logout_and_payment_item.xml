<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/cpBackgroundbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSettingImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dimen_25"
        android:layout_marginStart="15dp"
        android:src="@drawable/ic_myicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3" />

    <TextView
        android:id="@+id/tv_other_setting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:paddingVertical="@dimen/dimen_15"
        android:text="@string/payment"
        android:textColor="@color/cpTextDark"
        android:textSize="@dimen/font_size_16"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivSettingImage"
        app:layout_constraintStart_toEndOf="@+id/ivSettingImage"
        app:layout_constraintTop_toTopOf="@+id/ivSettingImage" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="@dimen/dimen_15"
        android:layout_height="@dimen/dimen_15"
        android:layout_marginStart="@dimen/dimen_5"
        android:padding="@dimen/dimen_2"
        android:src="@drawable/ic_back_right"
        app:layout_constraintBottom_toBottomOf="@+id/tv_other_setting_title"
        app:layout_constraintStart_toEndOf="@+id/tv_other_setting_title"
        app:layout_constraintTop_toTopOf="@+id/tv_other_setting_title"
        app:layout_constraintVertical_bias="0.5" />


</androidx.constraintlayout.widget.ConstraintLayout>